<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaf5ff">

    <TextView
        android:id="@+id/resultsTextMulti"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="488dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <Button
        android:id="@+id/return_to_menu_multi"
        android:layout_width="137dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="44dp"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradeCriteriaMulti"
        app:layout_constraintVertical_bias="0.997" />

    <Button
        android:id="@+id/retryGame_multi"
        android:layout_width="137dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="44dp"
        android:text="Retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toEndOf="@+id/return_to_menu_multi"
        app:layout_constraintTop_toBottomOf="@+id/gradeCriteriaMulti"
        app:layout_constraintVertical_bias="0.997" />

    <TextView
        android:id="@+id/gradeCriteriaMulti"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/resultsTextMulti"
        app:layout_constraintStart_toStartOf="@+id/resultsTextMulti"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextMulti" />

</android.support.constraint.ConstraintLayout>